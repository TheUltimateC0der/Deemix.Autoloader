@model Deemixrr.Models.ArtistExportViewModel

@{
    ViewData["Title"] = "Artists Export";
    ViewData["Message"] = "Here is list of all artists you have added.";
}
<div class="row">
	<div class="col-md-12 mb-5">
		 @if (Model.Artists?.Count == 0)
        {
            <div class="alert alert-info" role="alert">
                #FeelsBadMan You currently have exactly 0 artists. I am pretty sure you want to create a new <a class="btn btn-xs btn-primary" asp-controller="Artist" asp-action="Create" role="button">artist</a>
            </div>
        }
        else
        {
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">CSV export - Deezer ID</h5>
					<h6 class="card-subtitle mb-2 text-muted">Copy all of your artists' Deezer IDs into a csv file</h6>
					<hr />
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<textarea class="form-control" rows="3" asp-for="Artists">@Model.IDs_csv</textarea>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">CSV export - Artist Name</h5>
					<h6 class="card-subtitle mb-2 text-muted">Copy all of your artists into a csv file</h6>
					<hr />
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<textarea class="form-control" rows="3" asp-for="Artists">
									 @foreach (var artist in Model.Artists)@Model.Names_csv</textarea>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">List export - Artist Name</h5>
					<h6 class="card-subtitle mb-2 text-muted">Copy all of your artists into a list</h6>
					<hr />
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<textarea class="form-control" rows="3" asp-for="Artists">@Model.Names_newline</textarea>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
